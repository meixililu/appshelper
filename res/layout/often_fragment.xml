<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <GridView 
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalSpacing="@dimen/padding_15"
        android:horizontalSpacing="0dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"  
    	android:gravity="center"  
        />
    
    <com.gc.materialdesign.views.ButtonFloat
        android:id="@+id/button_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/padding_10"
        android:layout_marginBottom="@dimen/padding_margin"
        android:background="@color/load_blue"
        materialdesign:rippleSpeed="95"
        android:visibility="gone"
        materialdesign:iconDrawable="@drawable/ic_search_white_36dp"
         />
    
    <com.gc.materialdesign.views.ButtonFloat
        android:id="@+id/button_speak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_search"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/padding_10"
        android:layout_marginBottom="@dimen/padding_10"
        android:background="@color/load_blue"
        materialdesign:rippleSpeed="95"
        android:visibility="gone"
        materialdesign:iconDrawable="@drawable/ic_mic_white_36dp"
         />

</RelativeLayout>