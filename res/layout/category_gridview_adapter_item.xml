    android:id="@+id/app_cover"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="40dp"
    android:paddingBottom="40dp"
    android:foreground="@drawable/framelayout_selector"
    >
	    <TextView 
